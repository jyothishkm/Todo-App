<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_marginLeft="@dimen/item_list_margin_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:maxLines="1"
        android:textSize="@dimen/item_list_txt_size"


        />
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="@dimen/item_list_margin_size"
        android:textSize="@dimen/item_list_txt_size"
        android:textColor="#000000"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/item_list_margin_size"
        android:layout_marginRight="@dimen/item_list_margin_size"/>

    <Button
        android:id="@+id/btn_popup_item_list"
        android:layout_width="@dimen/item_list_button_size"
        android:layout_height="@dimen/item_list_button_size"
        android:background="@drawable/editgreen"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/item_list_margin_size"/>
</RelativeLayout>
</android.support.v7.widget.CardView>